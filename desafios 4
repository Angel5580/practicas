//8.-**Verificar si un número es positivo, negativo o cero**
numero = prompt ("ingresa un numero");
if (numero >0){
    console.log('el numero es positivo')
}
if (numero <0){
    console.log ('el numero es negativo')
}
else{
console.log ('el numero es 0');
}
//9.- **Imprimir números del 1 al 10 con un bucle while**
numero = 1;
while (numero <=10){
    console.log(numero);
    numero++;
}
//10.-**Determinar si una nota es aprobada o reprobada**
calificacion = prompt ("cual fue tu promedio este semestre");
if (calificacion >=9){
    console.log ('pidele a tus papas un juguete te lo mereces')
}
if (calificacion >=7){
    console.log ('puedes sacar mejor calificacion esfuerzate')
}
if (calificacion =6){
    console.log ('panzaste');
}
if (calificacion <=5){
    console.log ('a estudiar en vacaciones');
}


//11.-**Número aleatorio con Math.random**
numeroAleatorio = Math.random();
